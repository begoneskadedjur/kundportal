{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@5.2.2",
      "maxDuration": 60
    },
    "api/cron/*.ts": {
      "runtime": "@vercel/node@5.2.2",
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/cron/sync-embeddings",
      "schedule": "0 2 * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}