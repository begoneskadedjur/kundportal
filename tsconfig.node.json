{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,

    /* LÖSNING FÖR IMPLICIT 'ANY' */
    "strict": true,
    "noImplicitAny": true
  },
  "include": [
    // Inkludera alla API-filer
    "api/**/*.ts", 
    
    // Inkludera ENDAST de lib-filer som servern använder
    "src/lib/clickup.ts",
    "src/lib/supabase-admin.ts",

    // Inkludera Vite-konfigurationen
    "vite.config.ts"
  ]
}