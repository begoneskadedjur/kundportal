{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,

    /* LÖSNING FÖR IMPLICIT 'ANY' */
    "strict": true, 
    "noImplicitAny": true
  },
  "include": [
    // LÖSNING FÖR "FILE NOT LISTED"
    "api/**/*.ts", 
    "src/lib/**/*.ts", // Inkludera alla TS-filer i lib som servern behöver
    "vite.config.ts"
  ]
}